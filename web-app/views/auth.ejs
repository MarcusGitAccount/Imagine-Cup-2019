  <div class="container" id="auth-container">
    <div class="row margin-top-row">
      <div class="col-md-5 panel no-padding no-border panel-style col-sm-8">
        <div class="panel-heading form-top-part">
          <h1>Login form</h1>
          <i class="fa fa-sign-in" aria-hidden="true"></i>
        </div>
        <div class="panel-body">
          <form action="/auth/login" method="POST" id="user-login" class="form-horizontal">
            <div class="form-group">
              <label for="username" class="col-md-2 control-label input-margin">Username</label>
              <div class="col-md-9 col-md-offset-1 input-margin">
                <input name="username" type="text" class="form-control" placeholder="Enter username" required>
              </div>
              <label for="password" class="col-md-2 control-label input-margin">Password</label>
              <div class="col-md-9 col-md-offset-1 input-margin">
                <input name="password" type="password" class="form-control" placeholder="Enter password">
              </div>
              <div class="col-md-12">
                <input type="submit" value="Login" class="btn btn-style">
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-1"></div>
      <div class="col-md-1"></div>
      <div class="col-md-5 panel no-padding no-border panel-style">
        <div class="panel-heading form-top-part">
          <h1>Sign  up form</h1>
          <i class="fa fa-pencil" aria-hidden="true"></i>
        </div>
        <div class="panel-body">
          <form action="/auth/register" method="post" id="user-signup" class="form-horizontal">
            <div class="form-group">
              <label for="username" class="col-md-2 control-label input-margin">Username</label>
              <div class="col-md-9 col-md-offset-1 input-margin">
                <input name="username" type="text" class="form-control" placeholder="Enter username" required   pattern="[\S]{3,32}" title='Name must have at least 3 characters with no white spaces'>
              </div>
              <label for="password" class="col-md-2 control-label input-margin">Password</label>
              <div class="col-md-9 col-md-offset-1 input-margin">
                <input name="password" type="password" class="form-control" placeholder="Enter password" required pattern="\S{6,32}" title='Passwords must have at least 6 characters and no white spaces'>
              </div>
              <label for="password_repeat" class="col-md-2 control-label input-margin">Password</label>
              <div class="col-md-9 col-md-offset-1 input-margin">
                <input name="password_repeat" type="password" class="form-control" placeholder="Enter password again" required pattern="\S{6,32}" title='Passwords must have at least 6 characters and no white spaces'>
              </div>
              <div class="col-md-12">
                <input type="submit" value="Sign up" class="btn btn-style">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
